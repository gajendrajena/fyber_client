<% @offers.each do |offer| %>
  <div class="col-sm-6 col-lg-3 col-md-4 col-xs-12">
    <div class="thumbnail">
      <div class="col-sm-3 offer" style="background-image: url('<%=offer['thumbnail']["lowres"]%>')"></div>
      <div class="col-sm-9">
        <h5><%= offer['title'] %></h5>
        <span><%= offer['payout'] %></span>
      </div>
    </div>
  </div>
<% end %>