<p id="notice"><%= notice %></p>
<% if @offers.present?%>
  <div id="offers">
    <%= render 'offers' %>
  </div>
  <div class='row'>
    <div class="col-sm-3 pull-right">
      <a href="/" data-page="<%= (params[:page] || 1).to_i + 1 %>" id="load_more" class="pull-right"> Load More </a>
    </div>
  </div>
<% else %>
  No offers available
<% end %>

<div class="modal fade" id="loading-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <center>
        <img src="/assets/loading_spinner.gif" id="loading">
      </center>
    </div>
  </div>
</div>